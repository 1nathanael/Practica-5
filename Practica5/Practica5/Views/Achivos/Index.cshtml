@using Practica5.Models
@model IEnumerable<Modificador>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lector de Archivos</title>

    <center><H1>Lector de archivos</H1></center>
    <h4>En esta parte podras subir tus archivos de exel y leorlos libremente</h4>
    <hr />

    <style type="text/css">
        body{
            font-family:'Times New Roman', Times, serif Arial;
            font-size: 16pt;
        }

        table{
            border: 1px solid #000000;
            border-collapse: collapse;
            background-color: #ffffff;
        }

        table th{
            background-color: #00ff90;
            color: #333;
            font-weight: bold;
        }

        table th, table td{
            padding: 5px;
            border: 1px solid #ccc;
        }

        table, table table td{
            border: 0px solid #ccc;
        }

    </style>

</head>

<body>
    
    @using (Html.BeginForm("index", "Archivos", FormMethod.Post, new {enctype = "multipart/form-data" }))
    {
        <input type="file" class="btn btn-default" name="postedfile"><br>
        <input type="submit" class="btn btn-primary" value="importar">
    }

    @if (Model.Count() > 0)
    {
        <hr />
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripcion</th>
            </tr>

            @foreach (Modificador M in Model)
            {
                <tr>
                    <th>@M.ID</th>
                    <th>@M.Nombre</th>
                    <th>@M.Descripcion</th>

                </tr>
            }
        </table>
    }
        

</body>
</html>
